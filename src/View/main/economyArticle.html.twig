{% extends 'main/base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="/assets/css/main/economyArticle.css">
{% endblock %}

{% block main %}

    <div class="heading">
        <p>BIENVENUE SUR</p>
        <img src="/assets/images/main/logo-freewup-white.png" alt="logo_freewup">
        <div>
            <p>Catégories recommandées :</p>
            <div class="heading_categories">
                <button>Sport</button>
                <button>Économie</button>
                <button>Musique</button>
                <button>Cuisine</button>
                <button>Éducation</button>
                <button>Médecine</button>
                <button>Politique</button>
                <button>Business</button>
                <button>Webdesign</button>
            </div>
        </div>
    </div>
    <main>
    <h2>Suite des articles</h2>
    <div class="economy_block">
        <h1>Économie</h1>
        <div class="economy_block_list">
            {% for economie in economies %}
                <div class="economy_block_article" onclick="location.href='/article/{{ economie.id }}'">
                    <p>{{ economie.title }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <button class="more_article">
        <p class="more_article_text">Voir plus d'articles</p>
        <i id="more_article_arrow" class="fa-solid fa-2xl fa-chevron-down"></i>
    </button>
    </main>

{% endblock %}